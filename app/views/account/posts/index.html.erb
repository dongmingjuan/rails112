<div class="col-md-12">
  <h2 class="text-center">我发表的文章</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Writer</th>
        <th>Created_at</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
       <tr>
         <td><%= post.content %></td>
         <td><%= post.user.email %></td>
         <td><%= post.created_at %></td>
         <td><%= link_to('Edit', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs")%></td>
         <td><%= link_to('Delete', group_post_path(post.group, post), class: "btn btn-default btn-xs",
                          method: :delete, data: { confirm: "Are you sure? "})%></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</div>
