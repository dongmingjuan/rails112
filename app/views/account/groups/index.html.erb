<div class="col-md-12">
  <h2 class="text-center">我参加的讨论组</h2>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Writer</th>
        <th>Last Updated</th>
        <th>Count</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= render_group_description(group) %></td>
          <td><%= group.user.email %></td>
          <td><%= group.updated_at %></td>
          <td><%= group.posts.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
